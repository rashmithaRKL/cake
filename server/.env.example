# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/sweet-delights

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
SMTP_FROM=noreply@sweetdelights.com

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# File Upload Configuration
MAX_FILE_SIZE=5242880 # 5MB in bytes
UPLOAD_PATH=uploads

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=900000 # 15 minutes in milliseconds
RATE_LIMIT_MAX=100 # Maximum requests per window

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log

# Cache Configuration
REDIS_URL=redis://localhost:6379

# Social Media Integration
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your_bucket_name
AWS_REGION=your_aws_region

# Google Maps API Key (Optional)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Admin Configuration
ADMIN_EMAIL=admin@sweetdelights.com
DEFAULT_ADMIN_PASSWORD=change_this_password

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We are currently performing maintenance. Please try again later."

# Feature Flags
ENABLE_SOCIAL_LOGIN=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_REAL_TIME_TRACKING=true

# Payment Gateway Options
ENABLE_STRIPE=true
ENABLE_PAYPAL=false
ENABLE_CASH_ON_DELIVERY=true

# Delivery Configuration
MIN_ORDER_VALUE=10
FREE_DELIVERY_THRESHOLD=50
DEFAULT_DELIVERY_FEE=5
MAX_DELIVERY_DISTANCE=20 # in kilometers

# Order Configuration
ORDER_EXPIRY_TIME=1800000 # 30 minutes in milliseconds
CANCELLATION_WINDOW=3600000 # 1 hour in milliseconds

# Cache Configuration
CACHE_TTL=3600 # 1 hour in seconds
PRODUCT_CACHE_TTL=86400 # 24 hours in seconds

# Security Headers
ENABLE_HELMET=true
ENABLE_XSS_PROTECTION=true
ENABLE_CORS=true